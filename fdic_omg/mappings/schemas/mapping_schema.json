{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.org/fdic/schemas/column-mappings.json",
  "title": "FDIC Column Mappings Schema",
  "description": "JSON Schema for validating FDIC column mapping files",
  "type": "object",
  "required": ["dataset", "columns", "metadata"],
  "properties": {
    "dataset": {
      "type": "object",
      "description": "Dataset metadata",
      "required": ["title", "description", "publisher"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "publisher": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "homepage": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "spatial": {
          "type": "string"
        },
        "temporal": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d+$"
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "External resources documentation",
      "patternProperties": {
        "^[A-Za-z0-9_]+$": {
          "type": "object",
          "required": ["name", "description", "type"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "homepage": {
              "type": "string",
              "format": "uri"
            },
            "source": {
              "type": "string",
              "format": "uri"
            },
            "type": {
              "type": "string",
              "enum": [
                "Well-formed Ontology Standard",
                "Well-formed Ontology",
                "Well-formed Vocabulary",
                "Non-ontological Resource"
              ]
            }
          }
        }
      }
    },
    "columns": {
      "type": "object",
      "description": "Column mapping definitions",
      "patternProperties": {
        "^[A-Za-z0-9_]+$": {
          "type": "object",
          "required": ["label", "semantic_type", "data_type"],
          "properties": {
            "label": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string"
            },
            "semantic_type": {
              "type": "string",
              "enum": [
                "coordinate",
                "bank_name",
                "address",
                "location",
                "state_code",
                "state_name",
                "postal_code",
                "fdic_certificate",
                "bank_class",
                "service_description",
                "identifier"
              ]
            },
            "data_type": {
              "type": "string",
              "enum": ["string", "integer", "decimal"]
            },
            "mappings": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["ontology", "property"],
                "properties": {
                  "ontology": {
                    "type": "string"
                  },
                  "property": {
                    "type": "string",
                    "format": "uri"
                  },
                  "relation": {
                    "type": "string",
                    "enum": ["exact", "equivalent", "similar", "instance_of"]
                  }
                }
              }
            },
            "references": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["url", "type"],
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "definition",
                      "wikidata",
                      "wikidata_property",
                      "dbpedia",
                      "glossary",
                      "standard",
                      "documentation",
                      "tool",
                      "reference"
                    ]
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            },
            "comments": {
              "type": "string"
            },
            "standards": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            },
            "issuer": {
              "type": "string"
            }
          }
        }
      },
      "minProperties": 1
    },
    "metadata": {
      "type": "object",
      "description": "File metadata",
      "required": ["format_version", "created", "creator", "license"],
      "properties": {
        "format_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "creator": {
          "type": "string",
          "minLength": 1
        },
        "license": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}